<section class="dashboard">
    <h1>Dashboard</h1>
    <nav class="navbar">
        <ul>
            <li><a href="#/sortByCategories/all">All</a></li>
            <li><a href="#/sortByCategories/Cat">Cats</a></li>
            <li><a href="#/sortByCategories/Dog">Dogs</a></li>
            <li><a href="#/sortByCategories/Parrot">Parrots</a></li>
            <li><a href="#/sortByCategories/Reptile">Reptiles</a></li>
            <li><a href="#/sortByCategories/Other">Other</a></li>
        </ul>
    </nav>
    <ul class="other-pets-list">
        {{#each pets}}
            <li class="otherPet">

                <h3>Name: {{name}}</h3>
                <p>Category: {{category}}</p>
                <p class="img"><img src="{{imageURL}}"></p>
                <p class="description">{{description}}</p>
                <div class="pet-info">
                    <a href="#/upVote/{{_id}}"><button class="button"><i class="fas fa-heart"></i> Pet</button></a>
                    <a href="#/details/{{_id}}"><button class="button">Details</button></a>
                    <i class="fas fa-heart"></i> <span> {{likes}}</span>
                </div>
            </li>

        {{/each}}

    </ul>
</section>