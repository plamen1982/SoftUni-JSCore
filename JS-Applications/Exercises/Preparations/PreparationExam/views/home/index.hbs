<section id="viewCatalog" class="background-img">
    <a href="" class="add-flight">Add Flight +</a>

    <div class="added-flights">
        {{#if flights}}
            {{#each flights}}
                <a href="" class="added-flight">
                    <img src={{image}} alt="" class="picture-added-flight">
                    <h3>{{destination}}</h3>
                    <span>from {{origin}}</span><span>{{departure formatDate}}</span>
                </a>
            {{/each}}
        {{/if}}
    </div>
</section>